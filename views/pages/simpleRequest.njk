{% extends "layouts/masterLayout.njk" %}

{% block content %}

<div class="container my-5">
    <div class="card">
        <div class="card-header text-center">
            <p>
                <strong>
                    Simple Gemini API Request
                </strong>
            </p>
        </div>
        <div class="card-body">
            <form action="/simple_gemini_api_request" method="POST">
                <div class="form-group">
                    <label for="prompt" class="text-gray-700 text-sm font-bold mb-2">Enter your prompt</label>
                    <textarea id="myTextarea"
                        class="form-control appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        rows="5" cols="70" placeholder="Type your prompt here" name="inputPrompt" required></textarea>
                </div>
                <div class="text-center mt-3">
                    <button type="submit"
                        class="btn btn-primary bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Generate</button>
                </div>
            </form>
        </div>
    </div>

    {% if response %}
    <div class="mt-3">
        <h2>
            Gemini Response: {{ inputPrompt }}
        </h2>
        <p id="generatedText">{{ response }}</p>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const generatedText = document.getElementById("generatedText");
            generatedText.innerHTML = marked.parse(generatedText.innerHTML);
        });
    </script>

    {% endif %}
</div>




{% endblock %}